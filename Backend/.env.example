# Server configuration
PORT=4000
NODE_ENV=development
CLIENT_ORIGIN=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/college_app

# Sessions
SESSION_SECRET=super-secret-session-key
SESSION_NAME=college.sid
SESSION_DOMAIN=localhost
SESSION_SECURE=false
SESSION_MAX_AGE_DAYS=7

# JWT
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace-with-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d

# Integrations
BUS_WEBHOOK_SECRET=replace-with-bus-secret

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="College App <no-reply@collegeapp.com>"

# Logging
LOG_LEVEL=info
